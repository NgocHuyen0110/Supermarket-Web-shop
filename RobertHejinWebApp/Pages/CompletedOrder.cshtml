@page
@model RobertHejinWebApp.Pages.CompletedOrderModel
@{
}
<div class="card">
    <div class="card-body">
        <div class="container mb-5 mt-3">
            <div class="row d-flex align-items-baseline">
                <div class="col-xl-9">
                    <p style="color: #7e8d9f;font-size: 20px;">Order >> <strong>ID: @Model.Order.Id</strong></p>
                </div>
                <hr>
            </div>

            <div class="container">
                <div class="col-md-12">
                    <div class="text-center">
                        <h4 class="pt-0">Order</h4>
                    </div>

                </div>


                <div class="row">
                    <div class="col-xl-8">
                        <ul class="list-unstyled">
                            <li class="text-muted">To: <span style="color:#5d9fc5 ;">@Model.Order.User.FirstName @Model.UserLogin.LastName</span></li>
                            <li class="text-muted">Email: @Model.Order.User.Account.Email</li>
                            <li class="text-muted">Phone: 0 @Model.Order.User.PhoneNr</li>
                        </ul>
                    </div>
                    <div class="col-xl-4">
                        <p class="text-muted">Order details</p>
                        <ul class="list-unstyled">
                            <li class="text-muted">
                                <i style="color:#84B0CA ;"></i> <span class="fw-bold">ID:</span>@Model.Order.Id
                            </li>
                            <li class="text-muted">
                                <i  style="color:#84B0CA ;"></i> <span class="fw-bold">Order Date: </span>@Model.Order.OrderDate.ToShortDateString()
                            </li>
                            <li class="text-muted">
                                <i  style="color:#84B0CA ;"></i> <span class="me-1 fw-bold">Status:</span>@Model.Order.OrderStatus
                            </li>
                            <li class="text-muted">
                                <i  style="color:#84B0CA ;"></i> <span class="fw-bold">Delivery Date: </span>@Model.Order.DeliverOption.DeliveryDate.ToShortDateString()
                            </li>
                            <li class="text-muted">
                                <i style="color:#84B0CA ;"></i> <span class="fw-bold">Delivery To: </span>@Model.Order.DeliverOption.Address.ToString()
                            </li>
                            <li class="text-muted">
                                <i  style="color:#84B0CA ;"></i> <span class="fw-bold">Delivery Time: </span>@Model.Order.DeliverOption.TimeSlot
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="row my-2 mx-1 justify-content-center">
                    <table class="table table-striped table-borderless">
                        <thead style="background-color:#84B0CA ;" class="text-white">
                        <tr>
                            <th scope="col">Item</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Unit</th>
                            <th scope="col">Price/Unit</th>
                        </tr>
                        </thead>
                        @foreach (var c in @Model.Order.OrderItems)
                        {
                            <tbody>
                            <tr>
                                <td>@c.Item.ItemName</td>
                                <td>@c.Quantity</td>
                                <td>@c.Item.Unit</td>
                                <td>@c.Item.Price</td>
                            </tr>
                           
                            </tbody>
                        }
                       

                    </table>
                </div>
                <div class="row">
                    <div class="col-xl-8">
                        <p class="ms-3">Add additional notes and payment information</p>

                    </div>
                    <div class="col-xl-3">
                        <p class="text-black float-start">
                            <span class="text-black me-3"> Total Amount</span><span style="font-size: 25px;">@Model.Order.TotalPrice</span>
                        </p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-xl-10">
                        <p>Thank you for your purchase</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>