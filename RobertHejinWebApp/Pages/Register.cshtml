@page
@model RobertHejinWebApp.Pages.RegisterModel
@{
}

<div class="container w-50 mt-5">
    <form method="post">
        <h5>@Model.ResultMessage</h5>
        <!--  input Firstname and Lastname in the same line-->
        <div class="row">
            <div class="col mb-4">
                <label asp-for="User.FirstName" class="form-label">First name</label>
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
                <input asp-for="User.FirstName" class="form-control" placeholder="Enter your first name">
            </div>
            <!-- input last name-->
            <div class="col mb-4">
                <label asp-for="User.LastName" class="form-label">Last name</label>
                <span asp-validation-for="User.LastName" class="text-danger"></span>
                <input asp-for="User.LastName" class="form-control" placeholder="Enter your last name ">
            </div>
            <!-- input email-->
            <div class="mb-4">
                <label asp-for="User.Account.Email">Email</label>
                <span asp-validation-for="User.Account.Email" class="text-danger"></span>
                <input asp-for="User.Account.Email" class="form-control" placeholder="Enter your email ">
            </div>

            <!-- input address-->
            <div class=" mb-4">
                <label asp-for="User.Address" class="form-label">Address</label>
                <span asp-validation-for="User.Address" class="text-danger"></span>
                <input asp-for="User.Address" class="form-control" placeholder="Enter your address ">
            </div>
            <!-- input phoneNr-->
            <div class=" mb-4">
                <label asp-for="User.PhoneNr" class="form-label">Phone number</label>
                <span asp-validation-for="User.PhoneNr" class="text-danger"></span>
                <input asp-for="User.PhoneNr" class="form-control" placeholder="Enter your phone number ">
            </div>
            <!-- input password-->
            <div class="mb-4">
                <label asp-for="User.Account.Password" class="form-label">Password</label>
                <span asp-validation-for="User.Account.Password" class="text-danger"></span>
                <input asp-for="User.Account.Password" class="form-control" placeholder="Enter your password "/>
            </div>
            <!-- create account in web app, only one role is member-->
            <!-- sig up btn-->
            <button type="submit" class="btn btn-primary  mb-4">Sig Up</button>
        </div>
    </form>
</div>

@section Scripts
	{
	<partial name="_ValidationScriptsPartial" />
}
